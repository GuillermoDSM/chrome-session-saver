    {
        "manifest_version": 3,
        "name": "Session Saver",
        "version": "0.9",
        "description": "Save and restore browser windows as sessions. Organize your tabs efficiently.",
        "permissions": ["tabs", "storage", "windows", "bookmarks"],
        "icons": {
            "16": "icon-16.png",
            "32": "icon-32.png",
            "48": "icon-48.png",
            "128": "icon-128.png"
        },
        "background": {
            "service_worker": "background.js"
        },
        "action": {
            "default_popup": "popup.html",
            "default_icon": {
                "16": "icon-16.png",
                "32": "icon-32.png",
                "48": "icon-48.png",
                "128": "icon-128.png"
            }
        }
    }
    